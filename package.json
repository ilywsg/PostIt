{
  "name": "postit",
  "version": "1.0.0",
  "description": "andela bootcamp project ",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "server/tests/seed"
    ]
  },
  "scripts": {
    "start": "sequelize db:migrate && node app.js",
    "dev": "NODE_ENV=development && nodemon app",
    "apidoc": "apidoc -i server/routes/ -o public/apidoc",
    "testdev": "NODE_ENV=test && mocha server/tests/*.test.js",
    "test": "NODE_ENV=test && sequelize db:migrate && nyc --reporter=html mocha server/tests/*.test.js && nyc report",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "apidoc": {
    "name": "PostIt API - Documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "author": "jimoh hadi",
  "license": "ISC",
  "engines": {
    "node": "6.10.3"
  },
  "devDependencies": {
    "apidoc": "^0.15.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-survivejs-kanban": "^0.3.3",
    "chai": "^4.0.2",
    "concurrently": "^3.5.0",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "expect": "^1.20.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-install-webpack-plugin": "^4.0.4",
    "nyc": "^11.0.3",
    "style-loader": "^0.18.2",
    "supertest": "^3.0.0",
    "webpack": "^3.2.0",
    "webpack-dev-server": "^2.5.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "bcrypt-nodejs": "0.0.3",
