{
  "name": "postit",
  "version": "1.0.0",
  "description": "andela bootcamp project ",
  "main": "index.js",
  "scripts": {
    "start": "sequelize db:migrate && node app.js",
    "dev": "NODE_ENV=development && nodemon app",
    "apidoc": "apidoc -i server/routes/ -o public/apidoc",
    "testdev": "NODE_ENV=test && mocha server/tests/*.test.js",
    "test": "NODE_ENV=test && sequelize db:migrate && mocha server/tests/*.test.js && nyc report --reporter=text --slow 5000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "apidoc": {
    "name": "PostIt API - Documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "author": "jimoh hadi",
  "license": "ISC",
  "engines": {
    "node": "6.10.3"
  },
  "devDependencies": {
    "apidoc": "^0.15.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "expect": "^1.20.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.3",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
