{
  "name": "postit",
  "version": "1.0.0",
  "description": "andela bootcamp project ",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "server/tests/seed"
    ]
  },
  "scripts": {
    "build:dev": "webpack-dev-server",
    "start:build": "webpack",
    "babel": "nodemon --watch server --exec babel-node -- app.js",
    "server": "nodemon app.js --exec babel-node --presets es2015",
    "start": "sequelize db:migrate && node app.js && --exec npm run build",
    "dev": "NODE_ENV=development && nodemon app",
    "apidoc": "apidoc -i server/routes/ -o public/apidoc",
    "testdev": "NODE_ENV=test && mocha --compilers js:babel-register server/tests/*.test.js",
    "test": "NODE_ENV=test && sequelize db:migrate && nyc --reporter=html mocha --compilers js:babel-register server/tests/*.test.js && nyc report",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean-public": "npm run remove-public && mkdir production",
    "remove-public": "rimraf ./production",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm-run-all clean-public build:html",
    "build": "babel-node tools/build.js",
    "postbuild": "node tools/publicServer.js"
  },
  "apidoc": {
    "name": "PostIt API - Documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "author": "jimoh hadi",
  "license": "ISC",
  "engines": {
    "node": "6.10.3"
  },
  "devDependencies": {
    "apidoc": "^0.15.1",
    "chai": "^4.0.2",
    "concurrently": "^3.5.0",
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^7.1.0",
    "expect": "^1.20.2",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "npm-install-webpack-plugin": "^4.0.4",
    "nyc": "^11.0.3",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-react-jsx-img-import": "^0.1.4",
    "babel-polyfill": "6.8.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-survivejs-kanban": "^0.3.3",
    "babel-register": "^6.24.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "cheerio": "^0.20.0",
    "classnames": "^2.2.5",
    "colors": "1.1.2",
    "compression": "^1.6.1",
    "cors": "^2.8.4",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "file-loader": "^0.11.2",
    "jsonwebtoken": "^7.4.1",
    "keymirror": "^0.1.1",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "1.8.0",
    "open": "0.0.5",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-router": "3.0.2",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-promise-middleware": "^4.3.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "2.5.2",
    "sass-loader": "^6.0.6",
    "sequelize": "^3.30.2",
    "sequelize-cli": "^2.7.0",
    "serve-favicon": "^2.3.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "validatorjs": "^3.13.3",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1",
    "webpack-merge": "^4.1.0"
  }
}
